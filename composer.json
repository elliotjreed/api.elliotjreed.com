  "type": "project",
  "require": {
    "php": "^7.2",
    "ext-apcu": "*",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "slim/slim": "^3",
    "monolog/monolog": "^1",
    "guzzlehttp/guzzle": "^6.3",
    "spatie/schema-org": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7",
    "squizlabs/php_codesniffer": "^3",
    "php-coveralls/php-coveralls": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "ElliotJReed\\": "src/ElliotJReed"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ElliotJReed\\Tests\\": "tests/ElliotJReed"
    }
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs"
    ],
    "phpunit": "php vendor/bin/phpunit -c phpunit.xml --coverage-text",
    "phpcs": "php vendor/bin/phpcs --standard=ruleset.xml"
  }
